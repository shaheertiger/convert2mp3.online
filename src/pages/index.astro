---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ConverterWidget from '../components/ConverterWidget.tsx';

// Icons for the feature grid
const IconSearch = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-12 h-12 text-brand-red"><path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" /></svg>`;
const IconDownload = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-12 h-12 text-brand-red"><path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" /></svg>`;
const IconVideo = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-12 h-12 text-brand-red"><path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15.91 11.672a.375.375 0 0 1 0 .656l-5.603 3.113a.375.375 0 0 1-.557-.328V8.887c0-.286.307-.466.557-.327l5.603 3.112Z" /></svg>`;
const IconPlaylist = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-12 h-12 text-brand-red"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 12h.007v.008H3.75V12Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 17.25h.007v.008H3.75v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" /></svg>`;
---

<Layout title="Convert2MP3 - The Best Online Video Converter">
  <Header />
  
  <!-- Red Top Border Accent similar to reference -->
  <div class="fixed top-0 left-0 w-full h-1 bg-brand-red z-50"></div>

  <main class="bg-[#1a1b26] text-white overflow-hidden">
    
    <!-- HERO SECTION -->
    <section class="pt-32 pb-16 px-4 sm:px-6 lg:px-8 text-center bg-gradient-to-b from-[#1a1b26] to-[#16161e]">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl sm:text-5xl font-bold text-amber-400 mb-6 drop-shadow-sm">
          Your Premier Online Video Converter
        </h1>
        <p class="text-lg text-gray-300 mb-10 max-w-3xl mx-auto leading-relaxed">
          Convert2MP3 allows you to download videos instantly from platforms like YouTube, Dailymotion, and more. Transform content into MP3 or MP4 formats online. Fast, secure, and completely free.
        </p>

        <!-- Widget Wrapper -->
        <div class="mb-8">
          <ConverterWidget client:load lang="en" />
        </div>
        
        <p class="text-sm text-gray-500 max-w-2xl mx-auto">
          Simply enter a keyword to search or paste your link directly. Popular music videos are just a click away.
        </p>
      </div>
    </section>

    <!-- STEPS BAR -->
    <section class="border-y border-white/5 bg-white/5 py-4">
      <div class="max-w-6xl mx-auto px-4">
        <h3 class="text-center text-amber-400 font-semibold mb-6">How does Convert2MP3 work? It's simple:</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center text-sm text-gray-300">
          <div class="flex items-center flex-col md:flex-row gap-4 justify-center">
             <div class="font-bold text-white uppercase text-xs tracking-wider">Step 1</div>
             <div>Find your video on YouTube, Dailymotion, or Clipfish.</div>
          </div>
          <div class="flex items-center flex-col md:flex-row gap-4 justify-center">
             <div class="font-bold text-white uppercase text-xs tracking-wider">Step 2</div>
             <div>Copy the video link and paste it in the box above.</div>
          </div>
          <div class="flex items-center flex-col md:flex-row gap-4 justify-center">
             <div class="font-bold text-white uppercase text-xs tracking-wider">Step 3</div>
             <div>Select your format, convert, and download anywhere.</div>
          </div>
        </div>
      </div>
    </section>

    <!-- INTRO TEXT -->
    <section class="py-16 px-4">
      <div class="max-w-5xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-brand-red mb-8">Efficient YouTube to MP3 Conversion</h2>
        <p class="text-gray-400 leading-8 text-lg mb-8">
          Welcome to Convert2MP3, the modern and user-friendly evolution of classic video conversion. We aim to honor the legacy of reliable tools while building our own traditions: zero ads, zero redirects, and zero popups. We've optimized YouTube search directly on our homepage, so you don't even need to copy-paste URLs—just search and download. For other platforms like Twitch or Vimeo, our standard converter works flawlessly. Convert2MP3 features its own web-app experience, ensuring your MP3s are easy to tag with correct artist data, thumbnails, and ID3 tags. Experience a better way to convert.
        </p>
      </div>
    </section>

    <!-- FEATURES GRID -->
    <section class="py-12 bg-black/20">
      <div class="max-w-6xl mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-12">
        
        <!-- Feature 1 -->
        <div class="flex gap-6">
          <div class="shrink-0" set:html={IconSearch} />
          <div>
            <h3 class="text-xl font-bold text-amber-400 mb-2">MP3 Audio Converter</h3>
            <p class="text-gray-400 text-sm leading-6">
              Our core feature is the YouTube to MP3 engine. Easily find music on YouTube, convert the video into high-quality audio files, and save them to your device for offline listening without restrictions.
            </p>
          </div>
        </div>

        <!-- Feature 2 -->
        <div class="flex gap-6">
          <div class="shrink-0" set:html={IconDownload} />
          <div>
            <h3 class="text-xl font-bold text-amber-400 mb-2">Video Downloader</h3>
            <p class="text-gray-400 text-sm leading-6">
              Convert2MP3 helps you secure video files from YouTube in various formats. We support 1080p, 2K, 4K, and even full-length movies or TV show episodes without geo-blocking limitations.
            </p>
          </div>
        </div>

        <!-- Feature 3 -->
        <div class="flex gap-6">
          <div class="shrink-0" set:html={IconVideo} />
          <div>
            <h3 class="text-xl font-bold text-amber-400 mb-2">Support for Dailymotion</h3>
             <p class="text-gray-400 text-sm leading-6">
              Our tool isn't just for YouTube. It works perfectly with Dailymotion, offering the same high-quality MP4 and MP3 options. We cover all sources with robust format support.
            </p>
          </div>
        </div>

        <!-- Feature 4 -->
        <div class="flex gap-6">
          <div class="shrink-0" set:html={IconPlaylist} />
          <div>
             <h3 class="text-xl font-bold text-amber-400 mb-2">Playlist Support</h3>
             <p class="text-gray-400 text-sm leading-6">
              Copy a playlist URL from YouTube or Dailymotion, paste it, and hit the blue button. Convert2MP3 can handle lists of up to 200 videos, making it easy to archive entire collections.
            </p>
          </div>
        </div>

      </div>
    </section>

    <!-- SOCIAL / EXTRA TEXT -->
    <section class="py-16 px-4 text-center">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold text-amber-400 mb-6">Download from Facebook, Instagram, Twitter & More</h2>
        <p class="text-gray-400 text-sm leading-7">
          Convert2MP3 interacts with nearly 500 different websites. Whether it's social giants like Facebook, Reddit, Instagram, Twitter, or VK, or video hubs like Vimeo and Twitch, we have you covered. Even news sites and anime portals are supported. Convert2MP3 is the only tool you need to save educational videos, podcasts, music, and movies from the vast reach of the internet.
        </p>
      </div>
    </section>

    <!-- BOTTOM ACTIONS -->
    <section class="py-20 bg-white/5 border-t border-white/5 border-dashed">
      <div class="max-w-5xl mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-16">
        
        <!-- App Install -->
        <div class="text-center space-y-6">
          <h3 class="text-xl font-bold text-amber-400">Install Convert2MP3 App</h3>
          <button class="bg-[#5c6bc0] hover:bg-[#3f51b5] text-white px-8 py-3 rounded uppercase font-bold text-sm tracking-wide shadow-lg transition-all transform hover:scale-105">
            Add to Home Screen
          </button>
          <p class="text-gray-400 text-xs leading-5 text-left">
            Simply tap the button to add our official web app to your device. It works exactly like a native app—no updates or subscriptions required. It takes zero space and offers the fastest way to access your favorite converter on Android and iOS.
          </p>
        </div>

        <!-- Bookmarklet -->
        <div class="text-center space-y-6">
           <h3 class="text-xl font-bold text-amber-400">Quick-Access Bookmarklet</h3>
           <button class="bg-[#42a5f5] hover:bg-[#2196f3] text-white px-8 py-3 rounded uppercase font-bold text-sm tracking-wide shadow-lg transition-all cursor-move">
            Download MP4
          </button>
           <p class="text-gray-400 text-xs leading-5 text-left">
            For desktop users, drag and drop the button above to your bookmarks bar. Next time you are watching a video, simply click the bookmark to instantly open Convert2MP3 with the video ready to download. A powerful shortcut for power users.
          </p>
        </div>

      </div>
    </section>

    <!-- EMAIL / CONTACT -->
    <section class="py-12 text-center border-t border-white/5 border-dashed">
      <p class="text-gray-500 mb-2">e-mail - for all your wishes and suggestions</p>
      <p class="text-lg text-gray-300">Please, drop some Convert2MP3 knowledge on your friends and relatives!</p>
      
      <!-- Social Shares -->
      <div class="flex justify-center gap-6 mt-8">
        <a href="#" class="text-gray-400 hover:text-white transition-colors"><span class="sr-only">Share</span><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/></svg></a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors"><span class="sr-only">Like</span><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M1 21h4V9H1v12zm22-11c0-1.1-.9-2-2-2h-6.31l.95-4.57.03-.32c0-.41-.17-.79-.44-1.06L14.17 1 7.59 7.59C7.22 7.95 7 8.45 7 9v10c0 1.1.9 2 2 2h9c.83 0 1.54-.5 1.84-1.22l3.02-7.05c.09-.23.14-.47.14-.73v-1.91l-.01-.01L23 10z"/></svg></a>
      </div>
    </section>

  </main>

  <Footer />
</Layout>
