---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ConverterWidget from '../components/ConverterWidget.tsx';
---

<Layout title="Convert2MP3 - Online YouTube to MP3 Converter">
  <Header />
  
  <main class="flex-grow pt-32 pb-20 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Background Accents -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-brand-red/10 blur-[120px] rounded-full -z-10 pointer-events-none"></div>

    <div class="max-w-4xl mx-auto text-center space-y-8 animate-fade-in">
      <h1 class="text-5xl sm:text-6xl md:text-7xl font-extrabold tracking-tight text-white mb-6">
        Convert Video to <span class="text-brand-red bg-clip-text text-transparent bg-gradient-to-r from-brand-red to-orange-500">MP3</span>
      </h1>
      
      <p class="text-xl text-white/60 max-w-2xl mx-auto mb-10 leading-relaxed">
        The fastest and most reliable tool to convert online videos to MP3. No ads, no registration, completely free.
      </p>

      <!-- Converter Widget Island -->
      <ConverterWidget client:load lang="en" />
      
      <p class="text-xs text-white/30 uppercase tracking-widest font-medium pt-4">
        By using our service you agree to our <a href="/terms" class="text-white/50 hover:text-white underline decoration-white/30 transition-colors">Terms of Service</a>
      </p>
    </div>
  </main>

  <!-- How to Download Section -->
  <section id="how-to" class="py-20 bg-gradient-to-b from-brand-dark to-zinc-900/50 relative z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- How to Download -->
        <div>
          <h2 class="text-3xl font-bold text-white mb-8">How to Convert Video to MP3</h2>
          <ol class="space-y-6">
            <li class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 bg-brand-red/20 rounded-full flex items-center justify-center text-brand-red font-bold text-sm">1</span>
              <div>
                <h3 class="text-white font-semibold mb-1">Copy the Video URL</h3>
                <p class="text-white/50 text-sm">Open the video you want to convert and copy the URL.</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 bg-brand-red/20 rounded-full flex items-center justify-center text-brand-red font-bold text-sm">2</span>
              <div>
                <h3 class="text-white font-semibold mb-1">Paste the Link</h3>
                <p class="text-white/50 text-sm">Paste the link into the search box above and click "Start".</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 bg-brand-red/20 rounded-full flex items-center justify-center text-brand-red font-bold text-sm">3</span>
              <div>
                <h3 class="text-white font-semibold mb-1">Select Format</h3>
                <p class="text-white/50 text-sm">Choose MP3 for audio or MP4 for video.</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 bg-brand-red/20 rounded-full flex items-center justify-center text-brand-red font-bold text-sm">4</span>
              <div>
                <h3 class="text-white font-semibold mb-1">Download</h3>
                <p class="text-white/50 text-sm">Click the "Download" button and save the file to your device.</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 bg-brand-red/20 rounded-full flex items-center justify-center text-brand-red font-bold text-sm">5</span>
              <div>
                <h3 class="text-white font-semibold mb-1">Enjoy Offline</h3>
                <p class="text-white/50 text-sm">Listen to your converted audio anytime, anywhere.</p>
              </div>
            </li>
          </ol>
        </div>

        <!-- Why Use Us -->
        <div>
          <h2 class="text-3xl font-bold text-white mb-8">Why Use Convert2MP3?</h2>
          <ul class="space-y-5">
            <li class="flex items-start gap-4">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-brand-red flex-shrink-0 mt-0.5">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="text-white font-semibold mb-1">Unlimited Conversions</h3>
                <p class="text-white/50 text-sm">Convert as many videos as you want with no daily limits.</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-brand-red flex-shrink-0 mt-0.5">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="text-white font-semibold mb-1">Latest Technology</h3>
                <p class="text-white/50 text-sm">We use cutting-edge servers for lightning-fast conversions.</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-brand-red flex-shrink-0 mt-0.5">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="text-white font-semibold mb-1">No Registration Required</h3>
                <p class="text-white/50 text-sm">Start downloading immediately - no sign-up, no personal data.</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-brand-red flex-shrink-0 mt-0.5">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="text-white font-semibold mb-1">Multiple Formats</h3>
                <p class="text-white/50 text-sm">Download in MP4, MP3, WebM, and other popular formats.</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-brand-red flex-shrink-0 mt-0.5">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="text-white font-semibold mb-1">High Quality Audio</h3>
                <p class="text-white/50 text-sm">Download audio in up to 320kbps quality.</p>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section (6 Cards) -->
  <section id="features" class="py-20 bg-brand-dark relative z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-white text-center mb-12">Why Choose Convert2MP3?</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1: Lightning Fast -->
        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Fastest Conversion</h3>
          <p class="text-white/60 leading-relaxed">Our advanced servers ensure the fastest conversion speeds.</p>
        </div>

        <!-- Feature 2: Easy to Use -->
        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 5.523-4.477 10-10 10S1 17.523 1 12 5.477 2 11 2s10 4.477 10 10z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Easy to Use</h3>
          <p class="text-white/60 leading-relaxed">Simply paste the URL and click download. No technical knowledge required.</p>
        </div>

        <!-- Feature 3: 100% Free -->
        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 11.25v8.25a1.5 1.5 0 01-1.5 1.5H5.25a1.5 1.5 0 01-1.5-1.5v-8.25M12 4.875A2.625 2.625 0 109.375 7.5H12m0-2.625V7.5m0-2.625A2.625 2.625 0 1114.625 7.5H12m0 0V21m-8.625-9.75h18c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125h-18c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">100% Free</h3>
          <p class="text-white/60 leading-relaxed">No hidden fees, no subscriptions, no limits. Completely free forever.</p>
        </div>

        <!-- Feature 4: No Registration -->
        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M22 10.5h-6m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">No Registration</h3>
          <p class="text-white/60 leading-relaxed">Start downloading immediately without creating an account or signing up.</p>
        </div>

        <!-- Feature 5: HD Quality -->
        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 20.25h12m-7.5-3v3m3-3v3m-10.125-3h17.25c.621 0 1.125-.504 1.125-1.125V4.875c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v11.125c0 .621.504 1.125 1.125 1.125z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">HD Video Quality</h3>
          <p class="text-white/60 leading-relaxed">Download videos in original HD quality up to 4K and 8K resolution.</p>
        </div>

        <!-- Feature 6: All Devices -->
        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">All Devices</h3>
          <p class="text-white/60 leading-relaxed">Works on Windows, Mac, iOS, Android, and any device with a browser.</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
