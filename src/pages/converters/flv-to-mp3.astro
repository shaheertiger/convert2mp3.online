      e.preventDefault();
      uploadArea.classList.add('border-amber-500', 'bg-amber-900/10');
    });

    uploadArea?.addEventListener('dragleave', () => {
      uploadArea.classList.remove('border-amber-500', 'bg-amber-900/10');
    });

    uploadArea?.addEventListener('drop', (e) => {
      e.preventDefault();
      uploadArea.classList.remove('border-amber-500', 'bg-amber-900/10');
      const files = e.dataTransfer?.files;
      if (files && files.length > 0) {
        handleFile(files[0]);
      }
    });

    // File input change
    fileInput?.addEventListener('change', (e) => {
      const files = (e.target as HTMLInputElement).files;
      if (files && files.length > 0) {
        handleFile(files[0]);
      }
    });

    function handleFile(file: File) {
      // Validate file type
      if (!file.name.toLowerCase().endsWith('.flv')) {
        alert('Bitte w√§hlen Sie eine FLV-Datei aus.');
        return;
      }

      // Show progress
      uploadArea?.classList.add('hidden');
      progressArea?.classList.remove('hidden');
      if (fileName) fileName.textContent = file.name;
      
      // Simulate conversion progress (in production, this would be actual server upload/conversion)
      let progress = 0;
      const interval = setInterval(() => {
        progress += Math.random() * 15;
        if (progress >= 100) {
          progress = 100;
          clearInterval(interval);
          showResult(file.name);
        }
        if (progressBar) progressBar.style.width = progress + '%';
        if (statusText) {
          if (progress < 30) statusText.textContent = 'Datei wird hochgeladen...';
          else if (progress < 70) statusText.textContent = 'Audio wird extrahiert...';
          else statusText.textContent = 'MP3 wird erstellt...';
        }
      }, 200);
    }

    function showResult(originalName: string) {
      progressArea?.classList.add('hidden');
      resultArea?.classList.remove('hidden');
      const mp3Name = originalName.replace('.flv', '.mp3').replace('.FLV', '.mp3');
      if (resultFile) resultFile.textContent = mp3Name;
    }

    downloadBtn?.addEventListener('click', () => {
      // In production, this would download the actual converted file
      alert('In der Produktionsversion w√ºrde hier die konvertierte MP3-Datei heruntergeladen werden.');
    });
  </script>
  
