---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ConverterWidget from '../../components/ConverterWidget.tsx';

const title = "SoundCloud to MP3 Converter - Download Tracks & Mixes Free";
const description = "Convert SoundCloud tracks, mixes, and podcasts to MP3. Our free SoundCloud to MP3 converter works online without downloads.";
---

<Layout title={title} description={description}>
  <Header />

  <main class="bg-slate-900 text-slate-200 min-h-screen overflow-hidden">
    
    <!-- HERO -->
    <section class="pt-32 pb-20 px-4 text-center bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-orange-900/30 via-slate-900 to-slate-950">
      <div class="max-w-4xl mx-auto">
        <span class="text-orange-400 font-bold uppercase tracking-widest text-sm mb-4 block">SoundCloud Downloader</span>
        <h1 class="text-4xl sm:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-amber-400 mb-6 drop-shadow-sm tracking-tight">
          SoundCloud to MP3 Converter
        </h1>
        <p class="text-lg sm:text-xl text-slate-400 mb-10 max-w-3xl mx-auto leading-relaxed font-light">
          Download DJ sets, remixes, and underground tracks from SoundCloud.
          <span class="text-orange-400 font-medium">High quality. Totally free.</span>
        </p>

        <div class="mb-10 relative z-10">
          <ConverterWidget client:load lang="en" />
        </div>
        
        <p class="text-sm text-slate-500 max-w-lg mx-auto">
          Paste the SoundCloud track URL above. We support single tracks and some playlists.
        </p>
      </div>
    </section>

    <!-- FEATURES -->
    <section class="py-20 px-4 bg-slate-950/50 border-y border-white/5">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold text-white text-center mb-12">The Best <span class="text-orange-400">SoundCloud to MP3 Converter</span></h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div class="p-8 bg-slate-800/30 rounded-2xl border border-white/5">
            <div class="text-5xl mb-4">üéß</div>
            <h3 class="text-xl font-bold text-white mb-2">DJ-Ready Quality</h3>
            <p class="text-slate-400 text-sm">Download SoundCloud tracks in the highest available quality, ready for your DJ sets or personal playlists.</p>
          </div>
          <div class="p-8 bg-slate-800/30 rounded-2xl border border-white/5">
            <div class="text-5xl mb-4">‚òÅÔ∏è</div>
            <h3 class="text-xl font-bold text-white mb-2">No Software Needed</h3>
            <p class="text-slate-400 text-sm">Our SoundCloud converter runs entirely in your browser. No app downloads, no plugins.</p>
          </div>
          <div class="p-8 bg-slate-800/30 rounded-2xl border border-white/5">
            <div class="text-5xl mb-4">üè∑Ô∏è</div>
            <h3 class="text-xl font-bold text-white mb-2">Smart ID3 Tagging</h3>
            <p class="text-slate-400 text-sm">We automatically embed the artist name and cover art into your downloaded MP3 file.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- HOW TO -->
    <section class="py-20 px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-white mb-8">How to Download from <span class="text-orange-400">SoundCloud</span></h2>
        <ol class="space-y-6 text-left text-slate-400">
            <li class="flex gap-4 items-start">
                <span class="flex-shrink-0 w-8 h-8 rounded-full bg-orange-600 flex items-center justify-center font-bold text-white text-sm">1</span>
                <p><strong class="text-white">Find Your Track</strong>. Browse SoundCloud and find the song or mix you want to save.</p>
            </li>
            <li class="flex gap-4 items-start">
                <span class="flex-shrink-0 w-8 h-8 rounded-full bg-orange-600 flex items-center justify-center font-bold text-white text-sm">2</span>
                <p><strong class="text-white">Share & Copy Link</strong>. Click the "Share" button on SoundCloud and copy the URL.</p>
            </li>
            <li class="flex gap-4 items-start">
                <span class="flex-shrink-0 w-8 h-8 rounded-full bg-orange-600 flex items-center justify-center font-bold text-white text-sm">3</span>
                <p><strong class="text-white">Convert & Save</strong>. Paste into the box above and download your MP3 file.</p>
            </li>
        </ol>
      </div>
    </section>

    <!-- CROSS-LINKS -->
    <section class="py-12 px-4 bg-slate-950/30 border-t border-white/5">
        <div class="max-w-4xl mx-auto text-center">
            <p class="text-sm text-slate-500">
                Need other platforms? Check out our <a href="/converters/spotify-to-mp3" class="text-green-400 hover:underline">Spotify Converter</a> or the main <a href="/" class="text-violet-400 hover:underline">YouTube to MP3 Converter</a>.
            </p>
        </div>
    </section>

  </main>

  <Footer />
  
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebApplication",
    "name": "SoundCloud to MP3 Converter",
    "url": "https://convert2mp3.online/converters/soundcloud-to-mp3",
    "description": description,
    "applicationCategory": "MultimediaApplication",
    "operatingSystem": "Any",
    "offers": { "@type": "Offer", "price": "0", "priceCurrency": "PHP" }
  })} />
</Layout>
