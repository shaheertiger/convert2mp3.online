                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-8 h-8 text-brand-red mb-4"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
