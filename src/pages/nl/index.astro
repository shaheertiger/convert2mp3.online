        class="py-20 bg-gradient-to-b from-brand-dark to-zinc-900/50 relative z-10"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
                <!-- Steps -->
