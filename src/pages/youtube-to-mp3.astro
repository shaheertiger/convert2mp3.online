---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ConverterWidget from '../components/ConverterWidget.tsx';
---

<Layout title="Convert2MP3 - Online YouTube to MP3 Converter">
  <Header />
  
  <main class="flex-grow pt-32 pb-20 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Background Accents -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-brand-red/10 blur-[120px] rounded-full -z-10 pointer-events-none"></div>

    <div class="max-w-4xl mx-auto text-center space-y-8 animate-fade-in">
      <h1 class="text-5xl sm:text-6xl md:text-7xl font-extrabold tracking-tight text-white mb-6">
        Convert YouTube to <span class="text-brand-red bg-clip-text text-transparent bg-gradient-to-r from-brand-red to-orange-500">MP3</span>
      </h1>
      
      <p class="text-xl text-white/60 max-w-2xl mx-auto mb-10 leading-relaxed">
        Extract high-quality audio from any YouTube video. Download music, podcasts, and more in MP3 format - completely free.
      </p>

      <!-- Converter Widget Island -->
      <ConverterWidget client:load />
      
      <p class="text-xs text-white/30 uppercase tracking-widest font-medium pt-4">
        By using our service you agree to our <a href="/terms" class="text-white/50 hover:text-white underline decoration-white/30 transition-colors">Terms of Service</a>
      </p>
    </div>
  </main>

  <!-- Audio Download Benefits -->
  <section class="py-20 bg-gradient-to-b from-brand-dark to-zinc-900/50 relative z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-white text-center mb-12">Best YouTube to MP3 Converter</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-red/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 9l10.5-3m0 6.553v3.75a2.25 2.25 0 01-1.632 2.163l-1.32.377a1.803 1.803 0 11-.99-3.467l2.31-.66a2.25 2.25 0 001.632-2.163zm0 0V2.25L9 5.25v10.303m0 0v3.75a2.25 2.25 0 01-1.632 2.163l-1.32.377a1.803 1.803 0 01-.99-3.467l2.31-.66A2.25 2.25 0 009 15.553z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">High Quality Audio</h3>
          <p class="text-white/60">Extract audio in up to 320kbps quality for the best listening experience.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-red/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Instant Conversion</h3>
          <p class="text-white/60">Convert videos to MP3 in seconds with our lightning-fast servers.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-red/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Direct Download</h3>
          <p class="text-white/60">Download MP3 files directly to your device without any redirects.</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
