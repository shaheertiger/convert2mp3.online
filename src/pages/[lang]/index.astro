---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ConverterWidget from '../../components/ConverterWidget.tsx';
import { languages, useTranslations, type Language } from '../../i18n/translations';

export function getStaticPaths() {
  return Object.keys(languages).filter(l => l !== 'en' && l !== 'de' && l !== 'es').map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);
---

<Layout title={`${t('hero.title')} ${t('hero.title.highlight')} - Convert2MP3`}>
  <Header />
  
  <main class="flex-grow pt-32 pb-20 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-brand-red/10 blur-[120px] rounded-full -z-10 pointer-events-none"></div>

    <div class="max-w-4xl mx-auto text-center space-y-8 animate-fade-in">
      <h1 class="text-5xl sm:text-6xl md:text-7xl font-extrabold tracking-tight text-white mb-6">
        {t('hero.title')} <span class="text-brand-red bg-clip-text text-transparent bg-gradient-to-r from-brand-red to-orange-500">{t('hero.title.highlight')}</span>
      </h1>
      
      <p class="text-xl text-white/60 max-w-2xl mx-auto mb-10 leading-relaxed">
        {t('hero.description')}
      </p>

      <ConverterWidget client:load lang={lang} />
      
      <p class="text-xs text-white/30 uppercase tracking-widest font-medium pt-4">
        {t('hero.terms')} <a href={`/${lang}/terms`} class="text-white/50 hover:text-white underline decoration-white/30 transition-colors">{t('hero.terms.link')}</a>
      </p>
    </div>
  </main>

  <!-- How to Download Section -->
  <section id="how-to" class="py-20 bg-gradient-to-b from-brand-dark to-zinc-900/50 relative z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <div>
          <h2 class="text-3xl font-bold text-white mb-8">{t('howto.title')}</h2>
          <ol class="space-y-6">
            <li class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 bg-brand-red/20 rounded-full flex items-center justify-center text-brand-red font-bold text-sm">1</span>
              <div>
                <h3 class="text-white font-semibold mb-1">{t('howto.step1.title')}</h3>
                <p class="text-white/50 text-sm">{t('howto.step1.desc')}</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 bg-brand-red/20 rounded-full flex items-center justify-center text-brand-red font-bold text-sm">2</span>
              <div>
                <h3 class="text-white font-semibold mb-1">{t('howto.step2.title')}</h3>
                <p class="text-white/50 text-sm">{t('howto.step2.desc')}</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 bg-brand-red/20 rounded-full flex items-center justify-center text-brand-red font-bold text-sm">3</span>
              <div>
                <h3 class="text-white font-semibold mb-1">{t('howto.step3.title')}</h3>
                <p class="text-white/50 text-sm">{t('howto.step3.desc')}</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 bg-brand-red/20 rounded-full flex items-center justify-center text-brand-red font-bold text-sm">4</span>
              <div>
                <h3 class="text-white font-semibold mb-1">{t('howto.step4.title')}</h3>
                <p class="text-white/50 text-sm">{t('howto.step4.desc')}</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 bg-brand-red/20 rounded-full flex items-center justify-center text-brand-red font-bold text-sm">5</span>
              <div>
                <h3 class="text-white font-semibold mb-1">{t('howto.step5.title')}</h3>
                <p class="text-white/50 text-sm">{t('howto.step5.desc')}</p>
              </div>
            </li>
          </ol>
        </div>

        <div>
          <h2 class="text-3xl font-bold text-white mb-8">{t('whyus.title')}</h2>
          <ul class="space-y-5">
            <li class="flex items-start gap-4">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-brand-red flex-shrink-0 mt-0.5">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="text-white font-semibold mb-1">{t('whyus.unlimited.title')}</h3>
                <p class="text-white/50 text-sm">{t('whyus.unlimited.desc')}</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-brand-red flex-shrink-0 mt-0.5">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="text-white font-semibold mb-1">{t('whyus.tech.title')}</h3>
                <p class="text-white/50 text-sm">{t('whyus.tech.desc')}</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-brand-red flex-shrink-0 mt-0.5">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="text-white font-semibold mb-1">{t('whyus.noreg.title')}</h3>
                <p class="text-white/50 text-sm">{t('whyus.noreg.desc')}</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-brand-red flex-shrink-0 mt-0.5">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="text-white font-semibold mb-1">{t('whyus.formats.title')}</h3>
                <p class="text-white/50 text-sm">{t('whyus.formats.desc')}</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-brand-red flex-shrink-0 mt-0.5">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="text-white font-semibold mb-1">{t('whyus.hd.title')}</h3>
                <p class="text-white/50 text-sm">{t('whyus.hd.desc')}</p>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-brand-dark relative z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-white text-center mb-12">{t('features.title')}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">{t('features.fast.title')}</h3>
          <p class="text-white/60 leading-relaxed">{t('features.fast.desc')}</p>
        </div>

        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 5.523-4.477 10-10 10S1 17.523 1 12 5.477 2 11 2s10 4.477 10 10z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">{t('features.easy.title')}</h3>
          <p class="text-white/60 leading-relaxed">{t('features.easy.desc')}</p>
        </div>

        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 11.25v8.25a1.5 1.5 0 01-1.5 1.5H5.25a1.5 1.5 0 01-1.5-1.5v-8.25M12 4.875A2.625 2.625 0 109.375 7.5H12m0-2.625V7.5m0-2.625A2.625 2.625 0 1114.625 7.5H12m0 0V21m-8.625-9.75h18c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125h-18c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">{t('features.free.title')}</h3>
          <p class="text-white/60 leading-relaxed">{t('features.free.desc')}</p>
        </div>

        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M22 10.5h-6m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">{t('features.noreg.title')}</h3>
          <p class="text-white/60 leading-relaxed">{t('features.noreg.desc')}</p>
        </div>

        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 20.25h12m-7.5-3v3m3-3v3m-10.125-3h17.25c.621 0 1.125-.504 1.125-1.125V4.875c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v11.125c0 .621.504 1.125 1.125 1.125z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">{t('features.hd.title')}</h3>
          <p class="text-white/60 leading-relaxed">{t('features.hd.desc')}</p>
        </div>

        <div class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-brand-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">{t('features.devices.title')}</h3>
          <p class="text-white/60 leading-relaxed">{t('features.devices.desc')}</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
