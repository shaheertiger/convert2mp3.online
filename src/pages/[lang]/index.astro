---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import ConverterWidget from "../../components/ConverterWidget.tsx";
import {
  languages,
  useTranslations,
  type Language,
} from "../../i18n/translations";

export function getStaticPaths() {
  // Exclude languages that have custom landing pages
  return Object.keys(languages)
    .filter((l) => l !== "en" && l !== "de" && l !== "es" && l !== "nl")
    .map((lang) => ({
      params: { lang },
    }));
}

const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);
---

<Layout title={`${t("hero.title")} ${t("hero.title.highlight")} - Convert2MP3`}>
  <Header />

  <main
    class="flex-grow pt-32 pb-20 px-4 sm:px-6 lg:px-8 relative overflow-hidden"
  >
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-brand-red/10 blur-[120px] rounded-full -z-10 pointer-events-none"
    >
    </div>

    <div class="max-w-4xl mx-auto text-center space-y-8 animate-fade-in">
      <h1
        class="text-5xl sm:text-6xl md:text-7xl font-extrabold tracking-tight text-white mb-6"
      >
        {t("hero.title")}
        <span
          class="text-brand-red bg-clip-text text-transparent bg-gradient-to-r from-brand-red to-orange-500"
          >{t("hero.title.highlight")}</span
        >
      </h1>

      <p class="text-xl text-white/60 max-w-2xl mx-auto mb-10 leading-relaxed">
        {t("hero.description")}
      </p>

      <ConverterWidget client:load lang={lang} />

      <p
        class="text-xs text-white/30 uppercase tracking-widest font-medium pt-4"
      >
        {t("hero.terms")}
        <a
          href={`/${lang}/terms`}
          class="text-white/50 hover:text-white underline decoration-white/30 transition-colors"
          >{t("hero.terms.link")}</a
        >
      </p>
    </div>
  </main>

  <!-- How to Download Section -->
  <section
    id="how-to"
    class="py-20 bg-gradient-to-b from-brand-dark to-zinc-900/50 relative z-10"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
        <!-- Steps -->
        <div>
          <h2 class="text-3xl font-bold text-white mb-8">{t("howto.title")}</h2>
          <ol
            class="space-y-8 relative before:absolute before:left-4 before:top-4 before:bottom-4 before:w-0.5 before:bg-white/10"
          >
            <li class="flex items-start gap-6 relative">
              <span
                class="flex-shrink-0 w-8 h-8 bg-brand-red rounded-full flex items-center justify-center text-white font-bold text-sm shadow-lg shadow-brand-red/20 z-10"
                >1</span
              >
              <div>
                <h3 class="text-xl text-white font-semibold mb-2">
                  {t("howto.step1.title")}
                </h3>
                <p class="text-white/60">{t("howto.step1.desc")}</p>
              </div>
            </li>
            <li class="flex items-start gap-6 relative">
              <span
                class="flex-shrink-0 w-8 h-8 bg-brand-red rounded-full flex items-center justify-center text-white font-bold text-sm shadow-lg shadow-brand-red/20 z-10"
                >2</span
              >
              <div>
                <h3 class="text-xl text-white font-semibold mb-2">
                  {t("howto.step2.title")}
                </h3>
                <p class="text-white/60">{t("howto.step2.desc")}</p>
              </div>
            </li>
            <li class="flex items-start gap-6 relative">
              <span
                class="flex-shrink-0 w-8 h-8 bg-brand-red rounded-full flex items-center justify-center text-white font-bold text-sm shadow-lg shadow-brand-red/20 z-10"
                >3</span
              >
              <div>
                <h3 class="text-xl text-white font-semibold mb-2">
                  {t("howto.step3.title")}
                </h3>
                <p class="text-white/60">{t("howto.step3.desc")}</p>
              </div>
            </li>
            <li class="flex items-start gap-6 relative">
              <span
                class="flex-shrink-0 w-8 h-8 bg-brand-red rounded-full flex items-center justify-center text-white font-bold text-sm shadow-lg shadow-brand-red/20 z-10"
                >4</span
              >
              <div>
                <h3 class="text-xl text-white font-semibold mb-2">
                  {t("howto.step4.title")}
                </h3>
                <p class="text-white/60">{t("howto.step4.desc")}</p>
              </div>
            </li>
          </ol>
        </div>

        <!-- Benefits Grid -->
        <div>
          <div class="sticky top-24">
            <h2 class="text-3xl font-bold text-white mb-8">
              {t("whyus.title")}
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div
                class="bg-white/5 p-6 rounded-2xl border border-white/10 hover:bg-white/10 transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-8 h-8 text-brand-red mb-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path></svg
                >
                <h3 class="text-white font-bold mb-2">100% Free</h3>
                <p class="text-white/50 text-sm">{t("whyus.unlimited.desc")}</p>
              </div>
              <div
                class="bg-white/5 p-6 rounded-2xl border border-white/10 hover:bg-white/10 transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-8 h-8 text-brand-red mb-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path></svg
                >
                <h3 class="text-white font-bold mb-2">Safe & Secure</h3>
                <p class="text-white/50 text-sm">{t("whyus.tech.desc")}</p>
              </div>
              <div
                class="bg-white/5 p-6 rounded-2xl border border-white/10 hover:bg-white/10 transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-8 h-8 text-brand-red mb-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
                  ></path></svg
                >
                <h3 class="text-white font-bold mb-2">320kbps Audio</h3>
                <p class="text-white/50 text-sm">{t("whyus.hd.desc")}</p>
              </div>
              <div
                class="bg-white/5 p-6 rounded-2xl border border-white/10 hover:bg-white/10 transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-8 h-8 text-brand-red mb-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                  ></path></svg
                >
                <h3 class="text-white font-bold mb-2">All Devices</h3>
                <p class="text-white/50 text-sm">{t("whyus.noreg.desc")}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Expanded SEO Content (Features) -->
  <section
    id="features"
    class="py-24 bg-brand-dark relative z-10 border-t border-white/5"
  >
    <div class="max-w-4xl mx-auto px-4 sm:px-6 prose prose-invert prose-lg">
      <!-- Supported Platforms Section -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-white mb-6 text-center">
          {t("features.title")}
        </h2>
        <div
          class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center not-prose"
        >
          <div
            class="bg-white/5 p-4 rounded-lg hover:bg-white/10 transition-colors"
          >
            <span class="block font-bold text-white">YouTube</span>
            <span class="text-xs text-white/50">Videos & Shorts</span>
          </div>
          <div
            class="bg-white/5 p-4 rounded-lg hover:bg-white/10 transition-colors"
          >
            <span class="block font-bold text-white">TikTok</span>
            <span class="text-xs text-white/50">No Watermark</span>
          </div>
          <div
            class="bg-white/5 p-4 rounded-lg hover:bg-white/10 transition-colors"
          >
            <span class="block font-bold text-white">Instagram</span>
            <span class="text-xs text-white/50">Reels & IGTV</span>
          </div>
          <div
            class="bg-white/5 p-4 rounded-lg hover:bg-white/10 transition-colors"
          >
            <span class="block font-bold text-white">Facebook</span>
            <span class="text-xs text-white/50">Videos</span>
          </div>
        </div>
      </div>

      <!-- Technical Details -->
      <div class="grid md:grid-cols-2 gap-12 mb-16 not-prose">
        <div>
          <h3 class="text-2xl font-bold text-white mb-4">MP3 & Audio</h3>
          <p class="text-white/60 mb-4">
            {t("features.hd.desc")}
          </p>
          <ul class="space-y-2 text-white/60 text-sm">
            <li class="flex items-center gap-2">
              <div class="w-1.5 h-1.5 bg-brand-red rounded-full"></div>
              <strong>320 kbps</strong> (CD Quality)
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1.5 h-1.5 bg-brand-red rounded-full"></div> 256 kbps (High
              Quality)
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1.5 h-1.5 bg-brand-red rounded-full"></div> 192 kbps (Standard)
            </li>
          </ul>
        </div>

        <div>
          <h3 class="text-2xl font-bold text-white mb-4">MP4 & Video</h3>
          <p class="text-white/60 mb-4">
            Download videos in the highest possible resolution for offline
            viewing.
          </p>
          <ul class="space-y-2 text-white/60 text-sm">
            <li class="flex items-center gap-2">
              <div class="w-1.5 h-1.5 bg-brand-red rounded-full"></div>
              <strong>4K Ultra HD</strong> (2160p)
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1.5 h-1.5 bg-brand-red rounded-full"></div> Full HD (1080p)
            </li>
            <li class="flex items-center gap-2">
              <div class="w-1.5 h-1.5 bg-brand-red rounded-full"></div> HD Ready (720p)
            </li>
          </ul>
        </div>
      </div>

      <!-- Features Grid -->
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 not-prose"
      >
        <div
          class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1"
        >
          <div
            class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6 text-brand-red"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">
            {t("features.fast.title")}
          </h3>
          <p class="text-white/60 leading-relaxed">{t("features.fast.desc")}</p>
        </div>

        <div
          class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1"
        >
          <div
            class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6 text-brand-red"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 12.75L11.25 15 15 9.75M21 12c0 5.523-4.477 10-10 10S1 17.523 1 12 5.477 2 11 2s10 4.477 10 10z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">
            {t("features.easy.title")}
          </h3>
          <p class="text-white/60 leading-relaxed">{t("features.easy.desc")}</p>
        </div>

        <div
          class="group bg-white/5 border border-white/5 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1"
        >
          <div
            class="w-12 h-12 bg-brand-red/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-brand-red/20 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6 text-brand-red"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21 11.25v8.25a1.5 1.5 0 01-1.5 1.5H5.25a1.5 1.5 0 01-1.5-1.5v-8.25M12 4.875A2.625 2.625 0 109.375 7.5H12m0-2.625V7.5m0-2.625A2.625 2.625 0 1114.625 7.5H12m0 0V21m-8.625-9.75h18c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125h-18c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">
            {t("features.free.title")}
          </h3>
          <p class="text-white/60 leading-relaxed">{t("features.free.desc")}</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
