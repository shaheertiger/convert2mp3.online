export function getStaticPaths() {
    const paths: { params: { lang: string; converter: string } }[] = [];
    // Inline array to avoid module scope issues
    const converterSlugs = [
        "spotify-to-mp3",
        "facebook-to-mp3",
        "soundcloud-to-mp3",
        "mp4-to-mp3",
        "video-to-mp3",
        "youtube-to-mp3-320kbps",
        "free-youtube-to-mp3",
    ];
    const langs = [
        "es",
        "de",
        "fr",
        "pt",
        "ja",
        "ko",
        "ar",
        "it",
        "nl",
        "pl",
        "ru",
        "ua",
        "ro",
        "hu",
        "el",
        "cz",
        "tr",
        "id",
        "ph",
        "th",
        "vi",
        "cn",
    ];

    for (const lang of langs) {
        for (const converter of converterSlugs) {
            paths.push({ params: { lang, converter } });
        }
    }
    return paths;
}

