---
import { getLangFromUrl, useTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="bg-brand-dark border-t border-white/5 pt-16 pb-8 relative z-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">
      
      <!-- Brand Section -->
      <div class="space-y-6">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-brand-red to-red-600 flex items-center justify-center shadow-lg shadow-brand-red/20">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-white">
              <path d="M4.5 4.5a3 3 0 00-3 3v9a3 3 0 003 3h8.25a3 3 0 003-3v-9a3 3 0 00-3-3H4.5zM19.94 18.75l-2.69-2.69V7.94l2.69-2.69c.944-.945 2.56-.276 2.56 1.06v11.38c0 1.336-1.616 2.005-2.56 1.06z" />
            </svg>
          </div>
          <span class="text-xl font-bold tracking-tight text-white">
            Convert<span class="text-brand-red">2MP3</span>
          </span>
        </div>
        <p class="text-white/50 text-sm leading-relaxed max-w-xs">
          {t('footer.disclaimer.text')}
        </p>
      </div>

      <!-- Pages -->
      <div class="space-y-6">
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider">{t('footer.pages')}</h3>
        <ul class="space-y-3">
          <li><a href={lang === 'en' ? '/' : `/${lang}`} class="text-white/50 hover:text-white transition-colors text-sm">{t('nav.home')}</a></li>
          <li><a href={lang === 'en' ? '/youtube-to-mp3' : `/${lang}/youtube-to-mp3`} class="text-white/50 hover:text-white transition-colors text-sm">{t('nav.mp3')}</a></li>
          <li><a href={lang === 'en' ? '/faq' : `/${lang}/faq`} class="text-white/50 hover:text-white transition-colors text-sm">{t('nav.faq')}</a></li>
        </ul>
      </div>

      <!-- Legal -->
      <div class="space-y-6">
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider">{t('footer.legal')}</h3>
        <ul class="space-y-3">
          <li><a href={lang === 'en' ? '/terms' : `/${lang}/terms`} class="text-white/50 hover:text-white transition-colors text-sm">Terms of Service</a></li>
          <li><a href={lang === 'en' ? '/privacy' : `/${lang}/privacy`} class="text-white/50 hover:text-white transition-colors text-sm">Privacy Policy</a></li>
        </ul>
      </div>

      <!-- Disclaimer -->
      <div class="space-y-6">
         <h3 class="text-sm font-semibold text-white uppercase tracking-wider">{t('footer.disclaimer')}</h3>
         <p class="text-white/40 text-xs leading-relaxed">
            {t('footer.disclaimer.text')}
         </p>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-white/5 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-white/40 text-sm">
        &copy; {currentYear} Convert2MP3. {t('footer.copyright')}
      </p>
      <div class="flex items-center space-x-6">
          <a href="#" class="text-white/40 hover:text-white transition-colors">
              <span class="sr-only">Twitter</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
              </svg>
          </a>
          <a href="#" class="text-white/40 hover:text-white transition-colors">
              <span class="sr-only">GitHub</span>
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
          </a>
      </div>
    </div>
  </div>
</footer>
