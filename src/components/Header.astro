---
import LanguageSelector from "./LanguageSelector.tsx";
import { getLangFromUrl, useTranslations } from "../i18n/translations";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Base path for the current language
const basePath = lang === "en" ? "" : `/${lang}`;
---

<header
  class="fixed top-0 w-full z-50 transition-all duration-300 border-b border-white/5 bg-slate-900/90 backdrop-blur-xl"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a
        href={lang === "en" ? "/" : `/${lang}`}
        class="flex-shrink-0 flex items-center gap-2 cursor-pointer group"
      >
        <div
          class="w-8 h-8 rounded-lg bg-gradient-to-br from-violet-600 to-indigo-600 flex items-center justify-center shadow-lg shadow-violet-500/20 group-hover:shadow-violet-500/40 transition-all duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="w-5 h-5 text-white"
          >
            <path
              d="M4.5 4.5a3 3 0 00-3 3v9a3 3 0 003 3h8.25a3 3 0 003-3v-9a3 3 0 00-3-3H4.5zM19.94 18.75l-2.69-2.69V7.94l2.69-2.69c.944-.945 2.56-.276 2.56 1.06v11.38c0 1.336-1.616 2.005-2.56 1.06z"
            ></path>
          </svg>
        </div>
        <span
          class="text-xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-white to-white/80 group-hover:to-violet-400 transition-all duration-300"
        >
          Convert<span class="text-violet-400">2MP3</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a
          href={lang === "en" ? "/" : `/${lang}`}
          class="text-sm font-medium text-slate-300 hover:text-white transition-colors relative group"
        >
          {t("nav.home")}
          <span
            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-violet-500 transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
        <a
          href="/youtube-to-mp3"
          class="text-sm font-medium text-slate-300 hover:text-white transition-colors relative group"
        >
          {t("nav.mp3")}
          <span
            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-violet-500 transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
        <a
          href="/guides/youtube-to-mp3"
          class="text-sm font-medium text-slate-300 hover:text-white transition-colors relative group"
        >
          {t("nav.features")}
          <span
            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-violet-500 transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
        <a
          href="/faq"
          class="text-sm font-medium text-slate-300 hover:text-white transition-colors relative group"
        >
          {t("nav.faq")}
          <span
            class="absolute -bottom-1 left-0 w-0 h-0.5 bg-violet-500 transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
      </nav>

      <!-- Language Selector -->
      <div class="hidden md:flex items-center">
        <LanguageSelector client:load currentLang={lang} />
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden flex items-center">
        <button
          id="mobile-menu-btn"
          class="p-2 rounded-lg text-slate-300 hover:text-white hover:bg-white/10 transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <nav class="flex flex-col space-y-2 pt-4 border-t border-white/10">
        <a
          href={lang === "en" ? "/" : `/${lang}`}
          class="px-4 py-2 text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 rounded-lg transition-colors"
          >{t("nav.home")}</a
        >
        <a
          href="/youtube-to-mp3"
          class="px-4 py-2 text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 rounded-lg transition-colors"
          >{t("nav.mp3")}</a
        >
        <a
          href="/guides/youtube-to-mp3"
          class="px-4 py-2 text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 rounded-lg transition-colors"
          >{t("nav.features")}</a
        >
        <a
          href="/faq"
          class="px-4 py-2 text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 rounded-lg transition-colors"
          >{t("nav.faq")}</a
        >
      </nav>
    </div>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuBtn?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });
</script>
