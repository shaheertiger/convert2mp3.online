---
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";

interface Props {
    title: string;
    description?: string;
}

const {
    title,
    description = "Convert Spotify and SoundCloud to MP3 instantly. Fast, free, and no registration required. The best online MP3 converter.",
} = Astro.props;

import { getLangFromUrl } from "../i18n/translations";
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0, maximum-scale=5.0"
        />

        <!-- Mobile Optimization -->
        <meta name="theme-color" content="#0f172a" />
        <meta name="mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta
            name="apple-mobile-web-app-status-bar-style"
            content="black-translucent"
        />
        <meta name="format-detection" content="telephone=no" />

        <!-- Favicons & Icons -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <link rel="apple-touch-icon" href="/favicon.png" />
        <link rel="manifest" href="/manifest.json" />

        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description" content={description} />
        
        <!-- Bing Webmaster Tools Verification (replace with your key) -->
        <!-- <meta name="msvalidate.01" content="YOUR_BING_VERIFICATION_KEY" /> -->
        
        <!-- IndexNow for Bing Instant Indexing -->
        <!-- Key file should exist at: /[your-key].txt -->
        
        <Analytics />

        <!-- Canonical URL -->
        <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

        <!-- Hreflang for International SEO -->
        <link
            rel="alternate"
            hreflang="x-default"
            href={new URL("/", Astro.site)}
        />
        <link rel="alternate" hreflang="en" href={new URL("/", Astro.site)} />
        <link
            rel="alternate"
            hreflang="es"
            href={new URL("/es/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="de"
            href={new URL("/de/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="fr"
            href={new URL("/fr/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="pt"
            href={new URL("/pt/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="ja"
            href={new URL("/ja/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="ko"
            href={new URL("/ko/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="ar"
            href={new URL("/ar/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="it"
            href={new URL("/it/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="nl"
            href={new URL("/nl/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="pl"
            href={new URL("/pl/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="ru"
            href={new URL("/ru/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="uk"
            href={new URL("/ua/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="ro"
            href={new URL("/ro/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="hu"
            href={new URL("/hu/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="el"
            href={new URL("/el/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="cs"
            href={new URL("/cz/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="tr"
            href={new URL("/tr/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="id"
            href={new URL("/id/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="fil"
            href={new URL("/ph/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="th"
            href={new URL("/th/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="vi"
            href={new URL("/vi/", Astro.site)}
        />
        <link
            rel="alternate"
            hreflang="zh-Hant"
            href={new URL("/cn/", Astro.site)}
        />

        <!-- Open Graph -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta
            property="og:image"
            content={new URL("/og-image.jpg", Astro.url)}
        />
        <meta property="og:site_name" content="Convert2MP3" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta
            property="twitter:image"
            content={new URL("/og-image.jpg", Astro.url)}
        />

        <!-- 2026 AI Readiness & Schema -->
        <meta
            name="robots"
            content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
        />

        <script
            type="application/ld+json"
            set:html={JSON.stringify({
                "@context": "https://schema.org",
                "@type": "WebApplication",
                name: "Convert2MP3",
                url: "https://convert2mp3.online",
                logo: "https://convert2mp3.online/favicon.png",
                image: "https://convert2mp3.online/og-image.jpg",
                description:
                    "Convert Spotify and SoundCloud to MP3. The ultimate free online audio converter tool.",
                applicationCategory: "MultimediaApplication",
                operatingSystem: "Any",
                browserRequirements: "Requires JavaScript. Requires HTML5.",
                softwareVersion: "2.0",
                offers: {
                    "@type": "Offer",
                    price: "0",
                    priceCurrency: "USD",
                },
                featureList: "Spotify to MP3, SoundCloud to MP3, Video to MP3, Playlist Downloading, High Quality 320kbps",
                screenshot: "https://convert2mp3.online/og-image.jpg",
                aggregateRating: {
                    "@type": "AggregateRating",
                    ratingValue: "4.8",
                    ratingCount: "1250",
                    bestRating: "5",
                    worstRating: "1"
                }
            })}
        />
    </head>
    <body
        class="bg-brand-dark text-white min-h-screen flex flex-col font-body antialiased selection:bg-brand-red selection:text-white overflow-x-hidden"
    >
        <slot />
    </body>
</html>
